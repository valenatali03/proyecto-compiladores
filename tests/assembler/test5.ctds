program {
    integer assert_equals(integer obtained, integer expected) extern;

    integer inc(integer x)
    {
    	return x + 1;
    }

    void main() {
        integer i = 0;

        integer res = 0;

        while (i < 1) {
            if (i % 2 == 0) then 
            {
                if (i == 2) then 
                {
                    res = 100;
                } 
                else 
                {
                    res = i;
                }
            }
            i = inc(i);
        }

        assert_equals(res, 0);
    }
}