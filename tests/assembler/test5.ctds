program {
    integer print_int(integer x) extern;

    integer inc(integer x)
    {
    	return x + 1;
    }

    void main() {
        integer i = 0;

        while (i < 1) {
            if (i % 2 == 0) then 
            {
                if (i == 2) then 
                {
                    print_int(100);
                } 
                else 
                {
                    print_int(i);
                }
            }
            i = inc(i);
        }
    }
}